            // Extract Spotify track ID from URL
            extractSpotifyId(url) {
                if (!url) return '';
                const match = url.match(/track\/([a-zA-Z0-9]+)/);
                return match ? match[1] : '';
            }
            
            // Extract YouTube video ID from URL
            extractYouTubeId(url) {
                if (!url) return '';
                const match = url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([^&\n?#]+)/);
                return match ? match[1] : '';
            }
            
            // Extract SoundCloud track ID from URL
            extractSoundCloudId(url) {
                if (!url) return '';
                // SoundCloud URLs are more complex, just return the full URL for now
                return url;
            }
            
            // Notify main page of updates
            notifyMainPage() {
                // Try to communicate with main page if in iframe or same origin
                try {
                    if (window.parent && window.parent !== window) {
                        window.parent.postMessage({ type: 'ADMIN_DATA_UPDATED' }, '*');
                    }
                    
                    // Also dispatch a custom event
                    window.dispatchEvent(new CustomEvent('adminDataUpdated', {
