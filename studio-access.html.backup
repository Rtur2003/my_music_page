        // Simple Admin Manager
        class SimpleAdminManager {
            constructor() {
                this.init();
            }
            
            init() {
                this.setupForm();
                this.loadTracks();
                console.log('üéµ Admin Manager Ready');
            }
            
            setupForm() {
                const form = document.getElementById('addTrackForm');
                if (form) {
                    form.addEventListener('submit', (e) => this.handleAddTrack(e));
                }
            }
            
            handleAddTrack(e) {
                e.preventDefault();
                
                const trackData = {
                    title: document.getElementById('trackTitle').value,
                    genre: document.getElementById('trackGenre').value,
                    duration: document.getElementById('trackDuration').value || '3:45',
                    year: document.getElementById('trackYear').value || '2025',
                    description: document.getElementById('trackDescription').value,
                    artwork: document.getElementById('trackArtwork').value,
                    artist: "Hasan Arthur Altunta≈ü",
                    platforms: {
                        spotify: document.getElementById('spotifyUrl').value,
                        youtube: document.getElementById('youtubeUrl').value,
                        apple: document.getElementById('appleUrl').value,
                        soundcloud: document.getElementById('soundcloudUrl').value
                    }
                };
                
                if (trackData.title && trackData.genre) {
                    this.addTrackToStorage(trackData);
                    e.target.reset();
                    this.showNotification('‚úÖ Track added successfully!');
                    this.loadTracks();
                } else {
                    this.showNotification('‚ùå Please fill required fields', true);
                }
            }
            
            addTrackToStorage(trackData) {
                let tracks = JSON.parse(localStorage.getItem('hasan_arthur_tracks') || '[]');
                const newId = Math.max(...tracks.map(t => t.id), 0) + 1;
                trackData.id = newId;
                tracks.push(trackData);
                localStorage.setItem('hasan_arthur_tracks', JSON.stringify(tracks));
            }
            
            loadTracks() {
                const tracksList = document.getElementById('tracksList');
                if (!tracksList) return;
                
                const tracks = JSON.parse(localStorage.getItem('hasan_arthur_tracks') || '[]');
                
                if (tracks.length === 0) {
                    tracksList.innerHTML = '<p style="text-align: center; color: #c9a96e;">No tracks added yet. Add your first track above!</p>';
                    return;
                }
                
                tracksList.innerHTML = tracks.map(track => `
                    <div class="track-item">
                        <div class="track-info">
                            <h4>${track.title}</h4>
                            <p>${track.genre} ‚Ä¢ ${track.duration} ‚Ä¢ ${track.year}</p>
                        </div>
                        <div class="track-actions">
                            <button class="edit-btn" onclick="adminManager.editTrack(${track.id})">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="delete-btn" onclick="adminManager.deleteTrack(${track.id})">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                `).join('');
            }
            
            editTrack(id) {
                // For now, just show an alert - full edit functionality would require more UI
                alert('Edit functionality - track ID: ' + id);
            }
            
            deleteTrack(id) {
                if (confirm('Are you sure you want to delete this track?')) {
                    let tracks = JSON.parse(localStorage.getItem('hasan_arthur_tracks') || '[]');
                    tracks = tracks.filter(track => track.id !== id);
                    localStorage.setItem('hasan_arthur_tracks', JSON.stringify(tracks));
                    this.loadTracks();
                    this.showNotification('üóëÔ∏è Track deleted');
                }
            }
            
            showNotification(message, isError = false) {
                const notification = document.createElement('div');
                notification.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    padding: 1rem 1.5rem;
                    background: ${isError ? '#dc2626' : 'var(--accent-gold)'};
                    color: white;
                    border-radius: 8px;
                    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
                    z-index: 1000;
                    font-weight: 500;
                `;
                notification.textContent = message;
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.remove();
                }, 3000);
            }
        }
        
        // Initialize admin manager
        document.addEventListener('DOMContentLoaded', () => {
            window.adminManager = new SimpleAdminManager();
        });
    </script>
