            // Data persistence methods
            saveMusicData(data) {
                const existing = JSON.parse(SafeStorage.getItem('adminTracks') || '[]');
                
                // Transform data to match frontend expectations
                const trackData = {
                    title: data.title,
                    artist: data.artist,
                    genre: data.genre || 'Pop',
                    duration: data.duration || '3:45',
                    albumCover: data.albumCover || 'https://via.placeholder.com/300x300/6c5ce7/ffffff?text=Album+Cover',
                    description: data.description || '',
                    platforms: {
                        spotify: { url: data.platforms.spotify || '', id: this.extractSpotifyId(data.platforms.spotify) },
                        youtube: { url: data.platforms.youtube || '', id: this.extractYouTubeId(data.platforms.youtube) },
                        appleMusic: { url: data.platforms.appleMusic || '', id: '' },
                        soundcloud: { url: data.platforms.soundcloud || '', id: this.extractSoundCloudId(data.platforms.soundcloud) }
                    },
                    timestamp: data.timestamp
                };
                
                existing.push(trackData);
                SafeStorage.setItem('adminTracks', JSON.stringify(existing));
                
                // Also update music_catalog for backward compatibility
                SafeStorage.setItem('music_catalog', JSON.stringify(existing));
                
                // Notify main page
                this.notifyMainPage();
            }
            
            saveMediaData(data) {
                const existing = JSON.parse(SafeStorage.getItem('adminGallery') || '[]');
                
                // Transform data to match frontend expectations
                const mediaData = {
                    title: data.title,
                    category: data.category,
                    description: data.title,
                    src: data.url,
                    timestamp: data.timestamp
                };
                
                existing.push(mediaData);
                SafeStorage.setItem('adminGallery', JSON.stringify(existing));
                
                // Also update media_gallery for backward compatibility
                SafeStorage.setItem('media_gallery', JSON.stringify(existing));
                
                // Notify main page
                this.notifyMainPage();
            }
            
            saveContentData(data) {
                // Save content data in the format expected by the main page
                SafeStorage.setItem('heroTitle', data.mainTitle);
                SafeStorage.setItem('heroDescription', data.aboutContent);
                SafeStorage.setItem('aboutTextEn', data.aboutContent);
                SafeStorage.setItem('site_content', JSON.stringify(data));
                
