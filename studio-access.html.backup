                    return;
                }
                
                // Collect all form elements safely
                const elements = {
                    title: document.getElementById('trackTitle'),
                    artist: document.getElementById('artistName'),
                    genre: document.getElementById('trackGenre'),
                    duration: document.getElementById('trackDuration'),
                    albumCover: document.getElementById('albumCover'),
                    spotifyUrl: document.getElementById('spotifyUrl'),
                    youtubeUrl: document.getElementById('youtubeUrl'),
                    appleUrl: document.getElementById('appleUrl'),
                    soundcloudUrl: document.getElementById('soundcloudUrl'),
                    description: document.getElementById('trackDescription')
                };
                
                // Check if all required elements exist
                const missing = Object.keys(elements).filter(key => !elements[key]);
                if (missing.length > 0) {
                    console.error('Missing form elements:', missing);
                    this.showNotification('Form elementi bulunamadƒ±: ' + missing.join(', '), 'error');
                    return;
                }
                
                const trackData = {
                    title: elements.title.value,
                    artist: elements.artist.value,
                    genre: elements.genre.value,
                    duration: elements.duration.value || '3:45',
                    albumCover: elements.albumCover.value,
                    spotifyUrl: elements.spotifyUrl.value,
                    youtubeUrl: elements.youtubeUrl.value,
                    appleUrl: elements.appleUrl.value,
                    soundcloudUrl: elements.soundcloudUrl.value,
                    description: elements.description.value,
                    platforms: {
                        spotify: elements.spotifyUrl.value,
                        youtube: elements.youtubeUrl.value,
                        appleMusic: elements.appleUrl.value,
                        soundcloud: elements.soundcloudUrl.value
                    },
                    timestamp: new Date().toISOString()
                };
                
                if (trackData.title && trackData.artist) {
                    // Check if we're editing or adding new
                    if (this.editingMusicIndex !== undefined) {
                        const musicCatalog = JSON.parse(SafeStorage.getItem('music_catalog') || '[]');
                        musicCatalog[this.editingMusicIndex] = trackData;
                        SafeStorage.setItem('music_catalog', JSON.stringify(musicCatalog));
                        this.showNotification('M√ºzik par√ßasƒ± ba≈üarƒ±yla g√ºncellendi!');
                        this.editingMusicIndex = undefined; // Clear edit mode
                    } else {
                        this.saveMusicData(trackData);
                        this.showNotification('M√ºzik kataloƒüa ba≈üarƒ±yla eklendi!');
                    }
                    
                    event.target.reset();
                    this.refreshDashboardMetrics();
