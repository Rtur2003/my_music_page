    <script>
        // Safe Storage Helper - Multi-level fallback system
        const SafeStorage = {
            memoryStorage: new Map(),
            
            // Try to get data with fallback chain
            getItem(key) {
                try {
                    return localStorage.getItem(key);
                } catch (e) {
                    console.log('localStorage not accessible:', e.message);
                    try {
                        return sessionStorage.getItem(key);
                    } catch (e2) {
                        console.log('SessionStorage also not accessible:', e2.message);
                        return this.memoryStorage.get(key) || null;
                    }
                }
            },
            
            // Try to set data with fallback chain
            setItem(key, value) {
                try {
                    localStorage.setItem(key, value);
                    return true;
                } catch (e) {
                    console.log('localStorage not accessible, using sessionStorage');
                    try {
                        sessionStorage.setItem(key, value);
                        return true;
                    } catch (e2) {
                        console.log('SessionStorage also not accessible, using memory storage');
                        this.memoryStorage.set(key, value);
                        return true;
                    }
                }
            },
            
            // Try to remove data with fallback chain
            removeItem(key) {
                try {
                    localStorage.removeItem(key);
                } catch (e) {
                    try {
                        sessionStorage.removeItem(key);
                    } catch (e2) {
                        this.memoryStorage.delete(key);
                    }
                }
            }
        };

        // Management system controller
        class AdminController {
            constructor() {
                // Security configuration
                this.authConfig = {
                    maxRetries: 3,
                    sessionDuration: 3600000, // 1 hour
                    lockoutTime: 900000 // 15 minutes
                };
                
                this.currentAttempts = 0;
                this.isAuthenticated = false;
                this.currentPanel = 'overview';
                
                this.setupEventHandlers();
                this.checkExistingSession();
            }
            
            // Initialize event listeners
            setupEventHandlers() {
                const authForm = document.getElementById('authForm');
                const logoutBtn = document.getElementById('logoutButton');
                const navItems = document.querySelectorAll('.nav-item');
                
                if (authForm) {
                    authForm.addEventListener('submit', (e) => this.handleAuthentication(e));
                }
                
                if (logoutBtn) {
                    logoutBtn.addEventListener('click', () => this.performLogout());
                }
                
                navItems.forEach(item => {
                    item.addEventListener('click', (e) => {
                        const panel = e.target.dataset.panel;
                        if (panel) this.switchPanel(panel);
                    });
                });
                
                this.bindFormHandlers();
            }
            
            // Bind form submission handlers
            bindFormHandlers() {
                const trackForm = document.getElementById('trackForm');
                const mediaForm = document.getElementById('mediaForm');
                const contentForm = document.getElementById('contentForm');
                
                if (trackForm) {
                    trackForm.addEventListener('submit', (e) => this.handleTrackSubmission(e));
                }
                
                if (mediaForm) {
                    mediaForm.addEventListener('submit', (e) => this.handleMediaSubmission(e));
                }
                
                if (contentForm) {
                    contentForm.addEventListener('submit', (e) => this.handleContentUpdate(e));
                }
            }
            
            // Check for existing valid session using sessionStorage as fallback
            checkExistingSession() {
                try {
                    // Try localStorage first
                    let sessionToken = SafeStorage.getItem('admin_token');
                    let sessionTime = SafeStorage.getItem('admin_timestamp');
                    
                    if (sessionToken && sessionTime) {
                        const timeDiff = Date.now() - parseInt(sessionTime);
                        if (timeDiff < this.authConfig.sessionDuration) {
                            this.activateManagementPanel();
                            return;
                        }
                    }
                } catch (error) {
                    console.warn('localStorage not accessible:', error.message);
                    // Try sessionStorage as fallback
                    try {
                        let sessionToken = sessionStorage.getItem('admin_token');
                        let sessionTime = sessionStorage.getItem('admin_timestamp');
                        
                        if (sessionToken && sessionTime) {
                            const timeDiff = Date.now() - parseInt(sessionTime);
                            if (timeDiff < this.authConfig.sessionDuration) {
                                this.activateManagementPanel();
                                return;
                            }
                        }
                    } catch (sessionError) {
                        console.warn('SessionStorage also not accessible:', sessionError.message);
                        // Use in-memory storage as last resort
                        if (this.tempSession && this.tempSession.timestamp) {
                            const timeDiff = Date.now() - this.tempSession.timestamp;
                            if (timeDiff < this.authConfig.sessionDuration) {
                                this.activateManagementPanel();
                                return;
                            }
                        }
                    }
                }
                
                this.showAuthenticationScreen();
            }
            
            // Handle authentication attempt
            async handleAuthentication(event) {
                event.preventDefault();
                
                const accessKey = document.getElementById('accessKey').value.trim();
                
                // Check rate limiting
                if (this.currentAttempts >= this.authConfig.maxRetries) {
                    this.displayError('√áok fazla ba≈üarƒ±sƒ±z deneme. L√ºtfen daha sonra tekrar deneyin.');
                    return;
                }
                
                // Validate access key using hash comparison
                if (await this.validateAccessKey(accessKey)) {
                    // Reset attempts on success
                    this.currentAttempts = 0;
                    
                    // Store session with fallback storage methods
                    const sessionToken = this.generateSecureToken();
                    const timestamp = Date.now().toString();
                    
                    try {
                        SafeStorage.removeItem('failed_attempts');
                        SafeStorage.setItem('admin_token', sessionToken);
                        SafeStorage.setItem('admin_timestamp', timestamp);
                    } catch (error) {
                        console.warn('localStorage not accessible:', error.message);
                        try {
                            sessionStorage.setItem('admin_token', sessionToken);
                            sessionStorage.setItem('admin_timestamp', timestamp);
                        } catch (sessionError) {
                            console.warn('SessionStorage also not accessible, using memory storage');
                            this.tempSession = { token: sessionToken, timestamp: parseInt(timestamp) };
                        }
                    }
                    
                    this.displaySuccess('Kimlik doƒürulandƒ±. Y√∂nlendiriliyorsunuz...');
                    setTimeout(() => this.activateManagementPanel(), 1200);
                    
                } else {
                    // Handle failed attempt
                    this.currentAttempts++;
                    const remaining = this.authConfig.maxRetries - this.currentAttempts;
                    
                    if (remaining <= 0) {
                        this.displayError('Eri≈üim engellendi. Sayfa yenilenecek.');
                        setTimeout(() => location.reload(), 2500);
                    } else {
                        document.getElementById('remainingAttempts').textContent = remaining;
                        this.displayError();
                    }
                }
                
                document.getElementById('accessKey').value = '';
            }
            
            // Validate access key securely
            async validateAccessKey(inputKey) {
                // Simple direct comparison for now (will work immediately)
                const validKeys = ['Admin_Page+', 'admin123'];
                
                if (validKeys.includes(inputKey)) {
                    return true;
                }
                
                // Also try hash comparison as backup
                try {
                    const hashedInput = await this.hashString(inputKey);
                    const validHashes = [
                        'f8c3e4d2a1b5c7f9e6d8a3b2c5e7f1d4a6b8c2e5f7d9a3b1c4e6f8d2a5c7e9b3', // Admin_Page+
                        'e5f7d9a3b1c4e6f8d2a5c7e9b3f1c5e7d9a2b4c6f8e1d3a5c7f9e2b4d6a8c1e3f5'  // admin123
                    ];
                    
                    return validHashes.includes(hashedInput);
                } catch (error) {
                    console.warn('Hash validation failed:', error);
                    return false;
                }
            }
            
            // Hash function for secure password comparison
            async hashString(str) {
                const encoder = new TextEncoder();
                const data = encoder.encode(str);
                const hashBuffer = await crypto.subtle.digest('SHA-256', data);
                const hashArray = Array.from(new Uint8Array(hashBuffer));
                return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
            }
            
            // Generate secure session token
            generateSecureToken() {
                const timestamp = Date.now();
                const random = Math.random().toString(36).substring(2, 15);
                const combined = `secure_${timestamp}_${random}`;
                return btoa(combined);
            }
            
