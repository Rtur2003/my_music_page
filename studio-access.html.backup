    <script>
        // Safe Storage Helper (needed for admin security)
        // Validate admin session
        function validateAdminSession() {
            const session = SafeStorage.getItem('admin_session');
            const expiry = SafeStorage.getItem('admin_session_expiry');
            
            if (!session || !expiry) {
                redirectToMain();
                return false;
            }
            
            if (Date.now() > parseInt(expiry)) {
                clearAdminSession();
                redirectToMain();
                return false;
            }
            
            // Validate token in URL if present
            const urlParams = new URLSearchParams(window.location.search);
            const urlToken = urlParams.get('token');
            
            if (urlToken && urlToken !== session) {
                redirectToMain();
                return false;
            }
            
            return true;
        }
        
        function clearAdminSession() {
            SafeStorage.removeItem('admin_session');
            SafeStorage.removeItem('admin_session_expiry');
        }
        
        function redirectToMain() {
            clearAdminSession();
            window.location.href = 'index.html';
        }
        
        // Check session before allowing access to admin panel
        if (!validateAdminSession()) {
            // Will redirect, so stop execution here
        }
    </script>
    
