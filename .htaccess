# Apache Server Configuration for Music Portfolio Website

# Enable mod_rewrite for URL rewriting
RewriteEngine On

# Force HTTPS (if SSL is available)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect admin.html to admin for cleaner URLs
RewriteRule ^admin/?$ admin.html [L]

# Enable Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Set Expire Headers for Better Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType audio/mpeg "access plus 1 month"
    ExpiresByType audio/mp3 "access plus 1 month"
    ExpiresByType audio/wav "access plus 1 month"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Enable Browser Caching
<IfModule mod_headers.c>
    # Cache CSS and JS files for 1 year
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Cache images for 1 year
    <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg|ico)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Cache audio files for 1 month
    <FilesMatch "\.(mp3|wav|ogg|m4a)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
    
    # Cache fonts for 1 year
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Security headers
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Prevent access to sensitive files
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

<Files "robots.txt">
    Allow from all
</Files>

<Files "sitemap.xml">
    Allow from all
</Files>

<Files "manifest.json">
    Allow from all
</Files>

# Custom Error Pages
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# MIME Types for Audio Files
AddType audio/mpeg mp3
AddType audio/mp4 m4a
AddType audio/ogg ogg
AddType audio/wav wav

# MIME Types for Web Fonts
AddType font/woff woff
AddType font/woff2 woff2
AddType application/font-woff woff
AddType application/font-woff2 woff2

# MIME Types for Images
AddType image/webp webp

# Disable server signature
ServerSignature Off

# Prevent directory browsing
Options -Indexes

# Protect against DoS attacks by limiting request size
LimitRequestBody 52428800

# Enable Keep-Alive for better performance
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>