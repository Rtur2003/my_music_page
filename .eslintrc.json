{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "error"
  },
  "globals": {
    "console": "readonly",
    "document": "readonly",
    "window": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "navigator": "readonly",
    "performance": "readonly"
  }
}
